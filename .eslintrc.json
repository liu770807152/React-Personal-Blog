{
  "root": true,
  "extends": "next/core-web-vitals",
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    // "parser": "babel-eslint",
    "parser": "@typescript-eslint/parser",  // 指定ESLint解析器
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      // 添加ES特性支持，使之能够识别ES6语法
      "jsx": true
    }
  },
  "settings":  {
    "react":  {
      "version": "detect",  // 告诉eslint-plugin-react自动检测要使用的React版本
    }
  }
}
